{
  "name": "hexo-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "w-xuefeng",
  "description": "Hexo 桌面版客户端",
  "scripts": {
    "dev": "sh ./scripts/dev-prepare.sh && vite",
    "clean": "rimraf dist dist-electron release",
    "build-preloads": "sh ./scripts/build-preloads.sh",
    "build": "sh ./scripts/build-prepare.sh && electron-builder -wm",
    "build:w": "sh ./scripts/build-prepare.sh && electron-builder -w",
    "build:m": "sh ./scripts/build-prepare.sh && electron-builder -m",
    "preview": "vite preview",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write ./"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.56.0",
    "electron-log": "^5.1.7",
    "electron-store": "^10.0.0",
    "vue": "^3.4.35",
    "vue-i18n": "9",
    "vue-router": "4.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/eslint": "^9",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.8.0",
    "eslint-plugin-vue": "^9.27.0",
    "less": "^4.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.18.0",
    "unplugin-auto-import": "^0.18.2",
    "vite": "^5.3.5",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.29"
  },
  "main": "dist-electron/main.js",
  "packageManager": "yarn@4.3.1"
}
